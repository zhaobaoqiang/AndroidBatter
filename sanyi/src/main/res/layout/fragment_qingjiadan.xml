<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.fetech.sanyi.fragment.QingjiadanFragment">

    <com.wudoumi.batter.view.pullableview.PullToRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:context="cn.fetech.sanyi.fragment.QingjiadanFragment">

        <ListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.wudoumi.batter.view.pullableview.PullToRefreshLayout>


    <Button
        android:id="@+id/add"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:padding="10dp"
        android:background="@color/app_toolbar_bg"
        android:text="写假单"
        android:onClick="performClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>


