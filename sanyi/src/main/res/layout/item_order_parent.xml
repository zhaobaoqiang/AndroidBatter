<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:paddingTop="15dp">

    <RelativeLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_order"
        android:padding="10dp">

        <TextView
            android:id="@+id/oreder_no_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单号："
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/oreder_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/oreder_no_title"
            android:text="P20150729-01"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/oreder_no_title"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/heji_title"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="合计：" />

            <TextView
                android:id="@+id/total_price"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥4550.00元" />

            <TextView
                android:id="@+id/state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="待审核"
                android:textColor="@color/app_toolbar_bg"
                android:textSize="18sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_expand" />
    </RelativeLayout>
</FrameLayout>