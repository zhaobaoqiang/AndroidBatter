<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="cn.fetech.sanyi.activity.SupplierGaijiaActivity">

    <include layout="@layout/toolbar" />



    <View
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/lightgray" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            style="@style/tuihuanhuo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务类型" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/shouqian"
                android:checked="true"
                style="@style/gaijiaRb"
                android:text="售前改价" />

            <RadioButton
                android:id="@+id/shouhou"
                style="@style/gaijiaRb"
                android:text="售后改价" />
        </RadioGroup>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightgray" />
    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:columnCount="2">

        <TextView
            style="@style/tuihuanhuo"
            android:text="相关货品" />

        <TextView

            style="@style/tuihuanhuoContent.Click"
            android:text="Psdfsdf" />

        <View
            android:layout_height="1dp"
            android:background="@color/lightgray"
            app:layout_columnSpan="2" />

        <TextView
            style="@style/tuihuanhuo"
            android:text="原价" />

        <TextView
            style="@style/tuihuanhuoContent"
            android:text="￥3888.00" />

        <View
            android:layout_height="1dp"
            android:background="@color/lightgray"
            app:layout_columnSpan="2" />

        <TextView
            style="@style/tuihuanhuo"
            android:text="现价" />

        <EditText
            style="@style/tuihuanhuoContent"
            android:hint="请输入现价" />
        <View
            android:layout_height="1dp"
            android:background="@color/lightgray"
            app:layout_columnSpan="2" />

    </android.support.v7.widget.GridLayout>
</LinearLayout>

