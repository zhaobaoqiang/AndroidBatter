<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="@style/AppBaseTheme">

        <!-- 底部导航栏颜色 -->
        <item name="android:navigationBarColor">@color/app_toolbar_bg</item>


        <!-- Toolbar 菜单文字颜色-->
        <item name="android:actionMenuTextColor">#FFFFFF</item>

        <item name="android:actionMenuTextAppearance">@style/MenuTextStyle</item>

    </style>


    <!--溢出菜单样式 -->
    <style name="OverflowMenuStyle">
        <item name="android:overlapAnchor">false</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:popupBackground">#4a4a4a</item>
        <item name="android:divider">#2d2d2d</item>
        <item name="android:dividerHeight">2dp</item>
        <item name="android:dropDownVerticalOffset">3dp</item>
        <item name="android:dropDownHorizontalOffset">-5dp</item>
    </style>




</resources>