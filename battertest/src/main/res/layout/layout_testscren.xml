<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="@dimen/q240"
            android:layout_height="@dimen/q60"
            android:background="@color/black" />

        <TextView
            android:layout_width="@dimen/q240"
            android:layout_height="@dimen/q60"
            android:background="@color/red" />

        <TextView
            android:layout_width="@dimen/q240"
            android:layout_height="@dimen/q60"
            android:background="@color/green" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="137.33dp"
            android:layout_height="34.33dp"
            android:background="@color/black" />

        <TextView
            android:layout_width="137.33dp"
            android:layout_height="34.33dp"
            android:background="@color/red" />

        <TextView
            android:layout_width="137.33dp"
            android:layout_height="34.33dp"
            android:background="@color/green" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:background="@color/black" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:background="@color/red" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:background="@color/green" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="240px"
            android:layout_height="60px"
            android:background="@color/black" />

        <TextView
            android:layout_width="240px"
            android:layout_height="60px"
            android:background="@color/red" />

        <TextView
            android:layout_width="240px"
            android:layout_height="60px"
            android:background="@color/green" />
    </LinearLayout>


    <ImageView
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="90dp"
        android:layout_width="@dimen/q624"
        android:layout_height="@dimen/q140"
        android:src="@mipmap/main_head1_icon_1" />

    <ImageView
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:layout_width="@dimen/q624"
        android:layout_height="@dimen/q140"
        android:src="@mipmap/main_head1_icon_2" />
    <ImageView
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_width="@dimen/q624"
        android:layout_height="@dimen/q140"
        android:src="@mipmap/main_head1_icon_3" />
    <ImageView
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_width="@dimen/q624"
        android:layout_height="@dimen/q140"
        android:src="@mipmap/main_head1_icon_4" />

</LinearLayout>
